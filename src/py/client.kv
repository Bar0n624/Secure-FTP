MDScreen:
    name: "client"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        MDLabel:
            text : "Send Files Here !"
            font_name : "Raleway"
            font_size : "40sp"
            pos_hint : {"center_y": .95}
            halign: "center"
            color: rgba(255,255,255,255)

        MDLabel:
            text : app.show_device_details()
            font_name : "RalewayThin"
            font_size : "20sp"
            pos_hint : {"center_y": .85}
            halign: "center"
            color: rgba(255,255,255,255)

        Button:
            text: "Scan Devices"
            font_name: "Raleway"
            font_size: "20sp"
            size_hint: .20, .065
            pos_hint: {"center_x": .5, "center_y": .75}
            background_color: 0, 0, 0, 0
            
            on_press:
                app.show_connect_button()
            canvas.before:
                Color: 
                    rgb : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        
        Button:
            id: devices_button
            text: "Connect device"
            font_name: "Raleway"
            font_size: "20sp"
            size_hint: .30, .065
            pos_hint: {"center_x": .5, "center_y": .65}
            background_color: 0, 0, 0, 0
            opacity: 0
            disabled: not app.show_devices_scanned
            canvas.before:
                Color: 
                    rgb : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
            on_release:
                app.dropdown.caller = self
                app.dropdown.open()
                app.show_files_button()

        MDTextField:
            id: file_path
            hint_text: "Enter File Path"
            font_name: "Raleway"
            font_size: "30sp"
            size_hint_x: None
            width: 600
            pos_hint: {"center_x": .5, "center_y": .50}
            opacity: 0
            disabled: not app.show_file_path

        Button:
            id: send_file_path_button
            text: "Submit"
            font_name: "Raleway"
            font_size: "20sp"
            size_hint: .10, .065
            pos_hint: {"center_x": .5, "center_y": .40}
            background_color: 0, 0, 0, 0
            opacity: 0
            disabled: not app.show_file_path
            
            on_release:
                app.get_file_path()
                app.show_progress()
                app.progress_bar()

            canvas.before:
                Color: 
                    rgb : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDProgressBar:
            id: progress_bar
            value: 0
            size_hint: .8, None
            pos_hint: {"center_x": .5, "center_y": .30}
            opacity: 0
            disabled: not app.show_progress_bar

        MDLabel:
            id: file_sent_label
            text : "File sent successfully"
            font_name : "Raleway"
            font_size : "20sp"
            pos_hint : {"center_y": .20}
            halign: "center"
            color: rgba(255,255,255,255)
            opacity: 0

        Button:
            text: "Home Page"
            font_name: "Raleway"
            font_size: "20sp"
            size_hint: .30, .065
            pos_hint: {"center_x": .5, "center_y": .05}
            background_color: 0, 0, 0, 0
            
            on_release:
                app.hide_connect_button()
                app.hide_files_button()
                app.hide_progress()
                root.manager.transition.direction = "right"
                root.manager.current = "main"

            canvas.before:
                Color: 
                    rgb : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]