MDScreen:
    name : "main"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1
        MDLabel:
            text : "Welcome to our EFTP !"
            font_name : "Raleway"
            font_size : "40sp"
            pos_hint : {"center_y": .90}
            halign: "center"
            color: rgba(255,255,255,255)
        
        MDLabel:
            text : "To start the sharing of content please select one of the options below : "
            font_name : "RalewayThin"
            font_size : "20sp"
            pos_hint : {"center_y": .70}
            halign: "center"
            color: rgba(255,255,255,255)
        
        Image:
            source: "../../assets/upload.png"
            size_hint: .5, .5
            pos_hint: {"center_x": .25, "center_y": .40} 
        
        Image:
            source: "../../assets/download.png"
            size_hint: .4, .4
            pos_hint: {"center_x": .75, "center_y": .40} 
        
        Button:
            text: "Send Files"
            font_name: "Raleway"
            font_size: "20sp" 
            size_hint: .30, .065
            pos_hint: {"center_x": .25, "center_y": .10}
            background_color: 0, 0, 0, 0
            
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "client"
            canvas.before:
                Color: 
                    rgb : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5] 
        
        Button:
            text: "Recieve Files"
            font_name: "Raleway"
            font_size: "20sp" 
            size_hint: .30, .065
            pos_hint: {"center_x": .75, "center_y": .10}
            background_color: 0, 0, 0, 0
            
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "server"
            canvas.before:
                Color: 
                    rgb : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
